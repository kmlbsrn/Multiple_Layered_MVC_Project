@model LoginViewModel

<form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
    <div class="d-flex">
        <input asp-for="Email" type="text" class="form-control form-control-dark text-bg-dark me-2" placeholder="Email" />

        <input asp-for="Password" type="password" class="form-control form-control-dark text-bg-dark" placeholder="Password" />

        <button asp-controller="Auth" asp-action="Login" type="submit" class="btn btn-warning ms-2">Giriş</button>
        <button id="btnIptal" type="button" class="btn btn-outline-warning ms-2">İptal</button>

    </div>
</form>
