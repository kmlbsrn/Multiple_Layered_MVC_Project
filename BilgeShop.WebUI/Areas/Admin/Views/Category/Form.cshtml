@model CategoryFormViewModel


<div class="row">
    <div class="col-md-8 offset-2">
        <form asp-controller="Category" asp-action="Save" method="post">
            <div class="header fw-bold fs-5">

                <span>@(Model.Id == 0 ? "Kategori Ekleme Sayfası" : "Kategori Güncelleme Sayfası")</span>
            </div>

            @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
            {
                <div class="alert alert-info mt-2" role="alert">
                </div>

            }
            <div class="form-group">

                <input type="hidden" asp-for="Id" />
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>

            <div class="form-group">

              
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@(Model.Id==0 ? "Ekle":"Güncelle")" class="btn btn-success float-end mt-3" />
            </div>


        </form>


    </div>


</div>